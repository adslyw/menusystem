<!DOCTYPE html>
<html>
<head>
  <title>Dba</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="col-lg-2">
        <ul class="nav navbar-nav">
          <a class="navbar-brand" href="/">Adslyw</a>
        </ul>
      </div>
      <div class="col-lg-10">
      </div>
  </nav>
</head>
<body>
    <div class="col-lg-2">
      <ul id='menu'>
        <% Menu.all.each do |menu| %>
          <%= render menu %>
        <% end %>
      </ul>
    </div>
    <div class="col-lg-8">
      <%= yield %>
    </div>
    <script>
        $(function () {
            $('#menu').metisMenu();
        });
    </script>
</body>
</html>
